<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:background="@drawable/gmacs_bg_dialog_list_item_all_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/im_dialog_left_text_margin"
        android:layout_marginTop="@dimen/im_dialog_left_text_margin"
        android:textColor="@color/black_353535"
        android:textSize="@dimen/size_b" />

    <ListView
        android:id="@+id/dialog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/light_gray"
        android:dividerHeight="@dimen/im_dialog_list_item_divider_height">
    </ListView>

    <LinearLayout
        android:id="@+id/dialog_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/im_dialog_left_text_margin"
        android:layout_marginTop="@dimen/im_dialog_left_text_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/dialog_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/im_dialog_left_text_margin"
            android:layout_marginRight="@dimen/im_dialog_left_text_margin"
            android:visibility="gone" />

        <com.android.gmacs.view.FastScrollView
            android:id="@+id/dialog_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/dialog_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_353535"
                android:textSize="@dimen/size_b_b" />

        </com.android.gmacs.view.FastScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/dialog_neu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="@dimen/im_dialog_left_text_margin"
        android:layout_marginRight="@dimen/im_dialog_right_text_margin_right"
        android:background="@drawable/gmacs_bg_dialog_btn"
        android:gravity="center"
        android:paddingBottom="@dimen/im_dialog_right_button_padding_tb"
        android:paddingLeft="@dimen/im_dialog_right_button_padding_lr"
        android:paddingRight="@dimen/im_dialog_right_button_padding_lr"
        android:paddingTop="@dimen/im_dialog_right_button_padding_tb"
        android:textColor="@color/blue_A1ADC4"
        android:textSize="@dimen/size_b_b"
        android:theme="@android:style/Theme.Light" />

    <LinearLayout
        android:id="@+id/dialog_btns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/im_dialog_left_text_margin"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_neg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/gmacs_bg_dialog_btn"
            android:gravity="center"
            android:paddingBottom="@dimen/im_dialog_right_button_padding_tb"
            android:paddingLeft="@dimen/im_dialog_right_button_padding_lr"
            android:paddingRight="@dimen/im_dialog_right_button_padding_lr"
            android:paddingTop="@dimen/im_dialog_right_button_padding_tb"
            android:textColor="@color/blue_A1ADC4"
            android:textSize="@dimen/size_b_b"
            android:theme="@android:style/Theme.Light" />

        <Button
            android:id="@+id/dialog_pos_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/im_dialog_right_text_margin_left"
            android:layout_marginRight="@dimen/im_dialog_right_text_margin_right"
            android:background="@drawable/gmacs_bg_dialog_btn"
            android:gravity="center"
            android:paddingBottom="@dimen/im_dialog_right_button_padding_tb"
            android:paddingLeft="@dimen/im_dialog_right_button_padding_lr"
            android:paddingRight="@dimen/im_dialog_right_button_padding_lr"
            android:paddingTop="@dimen/im_dialog_right_button_padding_tb"
            android:textColor="@color/blue_A1ADC4"
            android:textSize="@dimen/size_b_b"
            android:theme="@android:style/Theme.Light" />
    </LinearLayout>
</LinearLayout>