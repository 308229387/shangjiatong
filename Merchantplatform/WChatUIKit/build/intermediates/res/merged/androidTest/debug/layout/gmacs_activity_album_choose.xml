<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/album_bg">

    <GridView
        android:id="@+id/myGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@null"
        android:numColumns="3"
        android:scrollbarStyle="outsideOverlay" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="9dip"
        android:paddingRight="9dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/select_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="@drawable/gmacs_spinner"/>

        <TextView
            android:id="@+id/preview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="@drawable/gmacs_btn_gray"
            android:gravity="center"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:text="@string/preview"
            android:textColor="@color/gmacs_text_color_enabled"
            android:textSize="@dimen/size_b_b" />

    </RelativeLayout>

</RelativeLayout>