<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_location"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gmacs_bg_location"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@+id/iv_location"
            android:background="@color/location_msg_background"
            android:gravity="center|left"
            android:paddingLeft="12dip"
            android:paddingRight="22dip"
            android:paddingTop="10dip"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingBottom="10dip"
            android:textSize="14dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gmacs_bg_talk_view_layer_right" />
    </RelativeLayout>