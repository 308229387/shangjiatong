<?xml version="1.0" encoding="utf-8"?>
<com.android.gmacs.view.emoji.FaceRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FaceRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line_top"
        style="@style/DottedLine"
        android:background="@color/gray_a5a5a5" />

    <RelativeLayout
        android:id="@+id/face_layout"
        android:layout_width="match_parent"
        android:layout_height="169dip"
        android:layout_below="@id/line_top"
        android:background="#f6f5f5"></RelativeLayout>

    <View
        android:id="@+id/line"
        style="@style/DottedLine"
        android:layout_below="@id/face_layout" />

    <HorizontalScrollView
        android:id="@+id/face_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/line"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/scroll_bar"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"></RadioGroup>
    </HorizontalScrollView>

</com.android.gmacs.view.emoji.FaceRelativeLayout>