<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/text_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/button_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_click"
        android:text="绑定手机号"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_bugly_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_click"
        android:text="崩溃一下"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView_glide_test"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_bugly_test"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_glide_test"
        android:text="跳转WPUSH"
        android:textSize="15sp" />
</RelativeLayout>
