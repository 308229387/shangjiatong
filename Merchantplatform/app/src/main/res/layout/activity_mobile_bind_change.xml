<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.Utils.TitleBar
        android:id="@+id/tb_Change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_bind_mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目前绑定手机"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_16" />

            <EditText
                android:id="@+id/now_bind_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="123456"
                android:editable="false"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@color/text_grays"
                android:textSize="@dimen/common_text_size_14"/>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_getCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/white"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="@dimen/common_text_size_16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="47dip"
            android:background="@color/line_gray_color"
            android:layout_toLeftOf="@id/btn_getCode"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_validate_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证手机号码"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_16" />

            <EditText
                android:id="@+id/now_validate_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="请输入验证码"
                android:background="@null"
                android:inputType="number"
                android:textSize="@dimen/common_text_size_14"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray_color"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定新手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_16" />

            <EditText
                android:id="@+id/new_validate_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="number"
                android:textSize="@dimen/common_text_size_14"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray_color" />

    <TextView
        android:id="@+id/tv_new_mobile_alert"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="15dip"
        android:text="输入有误，请输入正确手机号码"
        android:textSize="@dimen/common_text_size_12"
        android:textColor="@color/red"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/submit_btn_bgs"
        android:text="提交"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/mobile_notice"
        android:textSize="28px"
        android:textColor="#ababab"/>

</LinearLayout>