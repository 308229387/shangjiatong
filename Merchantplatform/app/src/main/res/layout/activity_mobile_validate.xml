<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_color">

    <com.ui.TitleBar
        android:id="@+id/tb_validate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray_color"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_16" />

            <EditText
                android:id="@+id/validate_mobile"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:numeric="integer"
                android:textColorHint="@color/whitedark"
                android:textSize="@dimen/common_text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_16" />

            <EditText
                android:id="@+id/validate_code"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:maxLength="6"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:textColorHint="@color/whitedark"
                android:textSize="@dimen/common_text_size_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:background="@color/line_gray_color" />

            <Button
                android:id="@+id/validate_getcode"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:textSize="@dimen/common_text_size_16"
                android:text="获取验证码"
                android:textColor="@color/red" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray_color"/>

        <Button
            android:id="@+id/commit"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/submit_btn_bgs"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_16" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/mobile_notice"
            android:textSize="@dimen/common_text_size_14"
            android:textColor="#ababab"/>
    </LinearLayout>

</LinearLayout>