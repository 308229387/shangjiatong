<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ui.TitleBar
        android:id="@+id/tb_setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_setting_push"
        android:layout_width="fill_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_setting_push"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_setting_push"
            android:text="消息推送"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_feedback"
        android:layout_width="fill_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_setting_feedback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_setting_feedback"
            android:text="意见反馈"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_binding"
        android:layout_width="fill_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_setting_binding"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_setting_binding"
            android:text="账号绑定"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_about"
        android:layout_width="fill_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_setting_about"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_setting_about"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_16" />
    </RelativeLayout>

</LinearLayout>