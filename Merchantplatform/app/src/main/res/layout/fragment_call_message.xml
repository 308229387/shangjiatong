<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_call_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/tabbg_white"
        android:gravity="center">

        <com.tablayout.SlidingTabLayout
            android:id="@+id/tb_switch_callType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/tabbg_white"
            app:tl_indicator_color="@color/tab_selected_text"
            app:tl_indicator_height="@dimen/tablayout_indicator_size"
            app:tl_indicator_width_equal_title="true"
            app:tl_textSelectColor="@color/tab_selected_text"
            app:tl_textUnselectColor="@color/tab_unselected_text"
            app:tl_textsize="20sp" />

    </LinearLayout>

    <com.ui.NoSwipeViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>