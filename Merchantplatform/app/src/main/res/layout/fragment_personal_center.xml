<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/center_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/iv_personal_background">

            <com.Utils.CircleImageView
                android:id="@+id/iv_personal_user"
                android:layout_width="61dip"
                android:layout_height="61dip"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_boy_user" />

            <TextView
                android:id="@+id/tv_personal_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_personal_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dip"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_20" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personal_funding"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/center_background"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_funding"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/iv_personal_funding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_funding"
            android:text="我的资金"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_17" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@mipmap/iv_setting_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="15dip"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray_color"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personal_setting"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/center_background">


        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/iv_personal_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_setting"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_17" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@mipmap/iv_setting_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_gray_color" />
</LinearLayout>