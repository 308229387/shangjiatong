<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_phoneState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/sym_call_incoming" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_phone_height"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/phoneNum_textsize" />

            <TextView
                android:id="@+id/tv_call_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_phone_height"
                android:layout_alignTop="@+id/tv_phoneNum"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_phoneNum"
                android:textSize="@dimen/phoneNum_textsize" />

            <TextView
                android:id="@+id/tv_phone_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_phone_height"
                android:layout_below="@+id/tv_phoneNum"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/phoneNum_textsize" />

            <TextView
                android:id="@+id/tv_call_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_phone_height"
                android:layout_alignTop="@+id/tv_phone_city"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_phone_city"
                android:background="@color/green"
                android:textSize="@dimen/phoneNum_textsize" />

            <TextView
                android:id="@+id/tv_call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/phoneNum_textsize" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_call_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_info_details" />

    </LinearLayout>

</LinearLayout>