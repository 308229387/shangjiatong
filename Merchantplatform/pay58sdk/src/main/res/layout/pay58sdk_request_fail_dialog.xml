<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pay58sdk_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_simple_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pay58sdk_dialog_title"
        android:gravity="center"
        android:text="@string/request_fail_title"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_simple_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_simple_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pay58sdk_dialog_btn"
        android:text="@string/ok"
        android:textSize="22sp" />

</LinearLayout>